<!DOCTYPE html>
<html>
<head>
	<title>crud operation using node and mysql</title>
	<link rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/assets/style.css">
</head>
<body>
	<center>
	<h2><%= title %></h2>
	<table border=" 1">
		<a href="add">insert here</a>
		<thead>
			<tr>
				<th>name</th>
				<th>location</th>
				<th>action</th>
			</tr>
		</thead>
		<tbody>

			<% user.forEach(function(user){ %>
			<tr>
			<td><%= user.name %></td>
			<td><%= user.location %></td>
		
			<td>
			<a href="/delete?id=<%= user.id %>" onClick="return confirm('are you sure you want to delete<%= user.name %> and <%= user.location %> ??')">delete</a>
			<a href="edit?id=<%= user.id %>">edit</a>
			</td>

		</tr>
		<% }); %>
		</tbody> 
	</table>
		
	
</body>
</center>
</html>